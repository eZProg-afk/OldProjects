<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/folder_icon_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/folder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/folder_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/folder_icon_iv"
        app:layout_constraintTop_toTopOf="@id/folder_icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/folder_icon_iv"
        android:text="ИМЯ ПАПКИ"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="15dp" />



</androidx.constraintlayout.widget.ConstraintLayout>