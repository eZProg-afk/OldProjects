<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="#333333"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/roll_image"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/def_roll"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/roll_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/def_name"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/roll_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/yanone_bold" />

        <TextView
            android:id="@+id/roll_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/def_price"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/roll_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/yanone_bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>